<%= form_for@user, :html => {:multipart => true} do |f| %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

  <h4>Contact</h4>

      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :skype %>
      <%= f.text_field :skype %>
      <%= f.label :linkedin_url %>
      <%= f.text_field :linkedin %>

   <h4>Current Employment</h4>

      <%= f.label :company %>
      <%= f.text_field :company %>
      <%= f.label :role %>
      <%= f.text_field :role %>

    <h4>Location</h4>

      <%= f.label :region %>
      <%= f.select :region, [["Africa"], ["Asia"], ["South America"], ["America"], ["Europe"]] %>
      <br>Hometown
      <%= f.label :city %>
      <%= f.text_field :home_city %>
      <%= f.label :country %>
      <%= f.text_field :home_country %>
      <br>Current Residence
      <%= f.label :city %>
      <%= f.text_field :current_city %>
      <%= f.label :country %>
      <%= f.text_field :current_country %>

    <h4>Education</h4>

      <%= f.label :university %>
      <%= f.text_field :university %>
      <%= f.label :year %>
      <%= f.text_field :year %>

    <h4>Personal</h4>

      <%= f.label :language  %>
      <%= f.text_field :language %>
      <%= f.label :bio  %>
      <%= f.text_field :bio %>
      <%= f.label :favorite_animal %>
      <%= f.text_field :animal %>
      <%= f.label :profile_pic %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>

    <div class="actions">
      <%= f.submit 'submit',:class => 'btn btn-success' %>
    </div>
<% end %>
